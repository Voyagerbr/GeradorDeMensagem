<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GeradorDeImagem.MainPage"
             Shell.NavBarIsVisible="False">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25"
            VerticalOptions="Center">
           <Label Text="Olá, seja bem vindo(a) ao Gerador de Imagens"
                   HorizontalOptions="Center"/>
           <Button Text="Gerar"
                   Clicked="Button_Clickedcd"
                   HorizontalOptions="Center"
                   BackgroundColor="Pink"
                   CornerRadius="25"/>
           <Image x:Name="imageMsg"
                 Aspect="AspectFill"
                 Source="vacalo.jpg"
                  HeightRequest="300"
                  WidthRequest="200" />                
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>

